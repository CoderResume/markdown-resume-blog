<% title(@post.title) %>

<article class="blog-post px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <header class="blog-post-header">
      <h2 class="title mb-2"><%= @post.title %></h2>
      <div class="meta mb-3">
        <span><%= t(:author) %>: <%= t(:author_name) %></span>
        <span class="date"><%= t(:posted_at) %> <%= time_ago_in_words(@post.created_at) %></span>
        <span class="time"><%= @post.content.size / 200 %> min read</span>
        <span class="comment"><a class="text-link" href="#">4 comments</a></span>
        <span><a class="text-link" href="<%= edit_admin_post_path(@post) %>">Edit (only you can)</a></span>
      </div>
    </header>

    <div class="blog-post-body">
      <%= raw markdown_text(@post.content) %>
    </div>

    <nav class="blog-nav nav nav-justified my-5">
      <% if @post_newer.present? %>
        <a class="nav-link-prev nav-item nav-link rounded-left" href="<%= @post_newer.path %>">
          Newer Post<i class="arrow-prev fas fa-long-arrow-alt-left"></i>
        </a>
      <% end %>
      <% if @post_older.present? %>
        <a class="nav-link-next nav-item nav-link rounded-right" href="<%= @post_older.path %>">
          Older Post<i class="arrow-next fas fa-long-arrow-alt-right"></i>
        </a>
      <% end %>
    </nav>
  </div>
</article>

<%= javascript_include_tag "pages/post_show" %>
