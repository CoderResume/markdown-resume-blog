<% content_for :title, "Categories" %>

<h1>Categories</h1>

<div>
  <% @categories.each do |category| %>
    <div id="<%= dom_id category %>">
      <%= category.id %>
      <%= link_to category.name, category.path %>
      <%= category.parent_id %>
      <%= category.parent&.name %>
    </div>
  <% end %>
</div>
