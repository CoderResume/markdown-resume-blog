<% content_for :title, "Manage Theme Colors" %>

<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <%= tag.div(flash[:notice], class: "text-success mb-3") if flash[:notice] %>
    <%= tag.div(flash[:alert], class: "text-danger mb-3") if flash[:alert] %>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h5>Themes</h5>
    </div>

    <table class="table table-striped my-4">
      <thead>
      <tr>
        <th>#</th>
        <th>Theme Name</th>
        <th>Current Color</th>
        <th>Enabled</th>
        <th>Free</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% if @themes.any? %>
        <% @themes.each do |theme| %>
          <tr>
            <th><%= theme.id %></th>
            <td><%= theme.name %></td>
            <td>
              <div class="d-flex align-items-center">
                <div style="width: 24px; height: 24px; background-color: var(--theme-<%= theme.color %>-primary, #<%= Theme::COLORS[theme.color] %>); border-radius: 4px; margin-right: 10px;"></div>
                Color <%= theme.color %>
              </div>
            </td>
            <td>
              <% if theme.enabled %>
                <span class="badge bg-success">Enabled</span>
              <% else %>
                <span class="badge bg-secondary">Disabled</span>
              <% end %>
            </td>
            <td>
              <% if theme.free %>
                <span class="badge bg-info">Free</span>
              <% else %>
                <span class="badge bg-warning text-dark">Premium</span>
              <% end %>
            </td>
            <td>
              <a href="<%= edit_admin_theme_path(theme) %>">
                <button type="button" class="btn btn-sm btn-outline-primary">Edit Color</button>
              </a>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="6" class="text-center">No themes found</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
