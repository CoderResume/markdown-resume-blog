<%= form_with(model: [:admin, post]) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-2">
    <%= form.label :id %>
    <%= form.text_field :id, class: "form-control", placeholder: "When empty, the system will automatically generate a value" %>
  </div>

  <div class="my-2">
    <%= form.label :permalink %>
    <%= form.text_field :permalink, class: "form-control", placeholder: "If it is empty or \"/\", it will be automatically generated according to the Title" %>
  </div>

  <div class="my-2">
    <%= form.label :title, class: "required" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="my-2">
    <%= form.label :category_id, class: "d-block required" %>
    <%= form.select :category_id, options_for_select(@category_options, post.category_id) %>
  </div>

  <div class="my-2">
    <%= form.label :content, class: "d-block required" %>
    <%= form.text_area :content, cols: 90, rows: 30 %>
  </div>

  <div class="mt-4">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
