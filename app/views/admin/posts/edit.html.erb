<% content_for :title, "Edit post" %>

<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <% if notice.present? %>
      <p style="color: green"><%= notice %></p>
    <% end %>

    <h5 class="mb-3">Edit post</h5>

    <%= render "form", post: @post %>

    <div class="mt-3">
      <div class="d-flex flex-wrap gap-2 mb-3">
        <a href="<%= admin_post_translations_path(@post) %>" data-turbo-action="advance">
          <button type="button" class="btn btn-info"><i class="fas fa-language me-1"></i> Manage Translations</button>
        </a>

        <%=
          button_to "Delete Post",
                    admin_post_path(@post),
                    method: :delete,
                    class: "btn btn-danger",
                    form: {
                      data: {
                        turbo_confirm: "Are you sure you want to delete this post?",
                        turbo_confirm_type: "danger"
                      }
                    }
        %>
      </div>
      <%= link_to "Show this post", @post.path, target: "_blank" %>
    </div>
  </div>
</section>
