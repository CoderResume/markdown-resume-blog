<% content_for :title, "Edit setting" %>

<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <% if notice.present? %>
      <p style="color: green"><%= notice %></p>
    <% end %>

    <h5 class="mb-3">Edit setting</h5>

    <%= form_with(model: [:admin, @setting]) do |form| %>
      <% if @setting.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

          <ul>
            <% @setting.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="my-2">
        <%= form.label :key, class: "required" %>
        <%= form.text_field :key, class: "form-control" %>
      </div>

      <div class="my-2">
        <%= form.label :value %>
        <%= form.text_field :value, class: "form-control" %>
      </div>

      <div class="mt-4">
        <%= form.submit nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
