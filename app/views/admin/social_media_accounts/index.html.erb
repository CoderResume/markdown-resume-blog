<% content_for :title, "Social media account" %>

<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <%= tag.div(flash[:notice], class: "text-success mb-3") if flash[:notice] %>

    <h5>Social media accounts</h5>

    <table class="table table-striped my-4">
      <thead>
        <tr>
          <th>#</th>
          <th>Key</th>
          <th>Value</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @social_media_accounts.each do |account| %>
        <tr>
          <th><%= account.id %></th>
          <td><%= account.key %></td>
          <td><%= account.value %></td>
          <td><a class="text-link" href="<%= edit_admin_social_media_account_path(account) %>">Edit</a></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
