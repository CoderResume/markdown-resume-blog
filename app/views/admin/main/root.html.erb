<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <p>
      <%= t(:welcome_admin, email: Current.session.user.email_address) %>
    </p>
    <div class="mt-3">
      <a href="<%= new_admin_post_path %>">
        <button type="button" class="btn btn-primary"><%= t(:create_a_post) %></button>
      </a>
    </div>
    <br>
    <%= link_to "Categories", admin_categories_path %>
    <br>
    <br>
    <%= link_to "Social media accounts", admin_social_media_accounts_path %>
    <br>
    <br>
    <%= link_to "Settings", admin_settings_path %>
    <br>
    <br>
    <%= link_to "GitHub App settings", admin_github_app_settings_path %>
    <br>
    <br>
    <details>
      <summary><%= t(:change_profile_avatar) %></summary>
      The avatar file is in <b>/path/to/rails-markdown-blog/app/assets/images/profile.jpg</b>.
      <br>
      Do not rename it, just replace it and execute the command `<b>rails assets:precompile</b>` on the "/path/to/rails-markdown-blog/" directory of the server.
    </details>
    <br>
    <%= button_to t(:log_out), session_path, method: :delete, class: "btn btn-primary my-2" if authenticated? %>
  </div>
</section>
